{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.21/MicrosoftTeams.schema.json",
  "version": "1.0.0",
  "manifestVersion": "1.21",
  "id": "{{YOUR_APP_ID}}",
  "name": {
    "short": "Meeting Cost Tracker",
    "full": "Meeting Cost Tracker - Track meeting costs in real-time"
  },
  "developer": {
    "name": "{{YOUR_COMPANY_NAME}}",
    "websiteUrl": "{{YOUR_WEBSITE_URL}}",
    "privacyUrl": "{{YOUR_WEBSITE_URL}}/privacy",
    "termsOfUseUrl": "{{YOUR_WEBSITE_URL}}/terms"
  },
  "description": {
    "short": "Track the cost of your meeting in real-time",
    "full": "Meeting Cost Tracker helps teams understand the financial impact of their meetings by tracking participant hourly rates and calculating costs for different meeting durations."
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#FFFFFF",
  "configurableTabs": [
    {
      "configurationUrl": "{{YOUR_BASE_URL}}/config",
      "canUpdateConfiguration": true,
      "scopes": [
        "team",
        "groupChat"
      ],
      "context": [
        "meetingSidePanel"
      ]
    }
  ],
  "validDomains": [
    "{{YOUR_DOMAIN}}"
  ],
  "webApplicationInfo": {
    "id": "{{YOUR_AZURE_APP_ID}}"
  }
}